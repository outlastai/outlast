{
  "name": "outlast",
  "version": "0.1.0",
  "private": true,
  "description": "Logistics follow-up automation system",
  "workspaces": [
    "mods/*"
  ],
  "bin": {
    "outlast": "./bin/run"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "build:ctl": "npm run build --workspace=@outlast/ctl",
    "test": "npm run test --workspaces",
    "test:integration": "npm run test:integration --workspace=@outlast/apiserver",
    "test:all": "npm run test:all --workspace=@outlast/apiserver",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf dist",
    "dev": "npm run dev --workspace=@outlast/apiserver",
    "start": "npm run start --workspace=@outlast/apiserver",
    "prisma:generate": "npm run prisma:generate --workspace=@outlast/apiserver",
    "prisma:migrate": "npm run prisma:migrate --workspace=@outlast/apiserver",
    "prisma:studio": "npm run prisma:studio --workspace=@outlast/apiserver",
    "db:reset": "npm run db:reset --workspace=@outlast/apiserver",
    "db:seed": "npm run db:seed --workspace=@outlast/apiserver",
    "load": "ts-node -r dotenv/config mods/ctl/src/commands/load.ts",
    "ai:build": "npm run build --workspace=@outlast/ai",
    "ai:example": "ts-node -r dotenv/config mods/ai/src/example.ts",
    "test:agent": "./QUICK_TEST.sh",
    "channels:build": "npm run build --workspace=@outlast/channels",
    "mcp:build": "npm run build --workspace=@outlast/mcp-server",
    "mcp:dev": "npm run dev --workspace=@outlast/mcp-server",
    "mcp:configure:claude": "ts-node -r dotenv/config .scripts/mcp-configure.ts"
  },
  "dependencies": {
    "@outlast/logger": "*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "dotenv-cli": "^7.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

