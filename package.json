{
  "name": "outlast",
  "version": "1.0.0",
  "description": "Outlast monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "mods/*"
  ],
  "scripts": {
    "clean": "lerna clean",
    "build": "lerna run build",
    "test": "lerna run test",
    "typecheck": "lerna run typecheck",
    "start:apiserver": "LOGS_LEVEL=verbose npm start -w @outlast/apiserver",
    "start:dashboard": "npm run dev -w @outlast/dashboard",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "db:generate": "npm run db:generate -w @outlast/apiserver",
    "db:migrate": "npm run db:migrate -w @outlast/apiserver",
    "db:migrate:deploy": "npm run db:migrate:deploy -w @outlast/apiserver",
    "db:push": "npm run db:push -w @outlast/apiserver",
    "db:studio": "npm run db:studio -w @outlast/apiserver",
    "db:seed": "npm run db:seed -w @outlast/apiserver"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.10",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-headers": "^1.3.3",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lerna": "^9.0.3",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  }
}
