# Outlast Development Environment Variables
# Copy this file to .env and fill in your values

# Database (Postgres connection string)
OUTLAST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/outlast

# API URL for CLI and other clients
OUTLAST_API_URL=http://localhost:3000

# Public URL for serving images
OUTLAST_PUBLIC_URL=http://localhost:3000

# API Server
OUTLAST_PORT=3000

# Basic auth credentials for system API access (format: username:password)
OUTLAST_CREDENTIALS=admin:secret

# Public path for storing/serving static files
OUTLAST_PUBLIC_PATH=./public

# Postgres (for Docker Compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=outlast
POSTGRES_PORT=5432
