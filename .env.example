# Outlast Development Environment Variables
# Copy this file to .env and fill in your values

# API Server (required)
OUTLAST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/outlast
OUTLAST_PORT=3000
OUTLAST_PUBLIC_PATH=./public

# Client/CLI (required)
OUTLAST_API_URL=http://localhost:3000
OUTLAST_PUBLIC_URL=http://localhost:3000
OUTLAST_CREDENTIALS=admin:secret

# Identity (required)
# Database for identity module
OUTLAST_IDENTITY_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/outlast_identity
# Encryption key for sensitive fields (generate with: npx @47ng/cloak generate)
OUTLAST_IDENTITY_CLOAK_ENCRYPTION_KEY=k1.aesgcm256.REPLACE_WITH_GENERATED_KEY
# RSA keys for JWT signing (single line with \n for newlines)
# Generate with: npm run db:generate-keys -w @outlast/identity
OUTLAST_IDENTITY_PRIVATE_KEY=
OUTLAST_IDENTITY_PUBLIC_KEY=
OUTLAST_IDENTITY_ISSUER=outlast
OUTLAST_IDENTITY_AUDIENCE=outlast

# Identity (optional)
OUTLAST_IDENTITY_ACCESS_TOKEN_EXPIRES_IN=15m
OUTLAST_IDENTITY_REFRESH_TOKEN_EXPIRES_IN=24h
OUTLAST_IDENTITY_ID_TOKEN_EXPIRES_IN=1h
OUTLAST_IDENTITY_WORKSPACE_INVITE_EXPIRATION=7d
OUTLAST_IDENTITY_WORKSPACE_INVITE_URL=
OUTLAST_IDENTITY_WORKSPACE_INVITE_FAIL_URL=
OUTLAST_IDENTITY_CONTACT_VERIFICATION_REQUIRED=false
OUTLAST_IDENTITY_TWO_FACTOR_AUTH_REQUIRED=false

# Email (optional)
OUTLAST_IDENTITY_SMTP_SENDER=
OUTLAST_IDENTITY_SMTP_HOST=
OUTLAST_IDENTITY_SMTP_PORT=587
OUTLAST_IDENTITY_SMTP_SECURE=false
OUTLAST_IDENTITY_SMTP_USER=
OUTLAST_IDENTITY_SMTP_PASS=

# SMS (optional)
OUTLAST_IDENTITY_TWILIO_ACCOUNT_SID=
OUTLAST_IDENTITY_TWILIO_AUTH_TOKEN=
OUTLAST_IDENTITY_TWILIO_PHONE_NUMBER=

# GitHub OAuth (optional)
OUTLAST_IDENTITY_GITHUB_CLIENT_ID=
OUTLAST_IDENTITY_GITHUB_CLIENT_SECRET=

# Postgres (for Docker Compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=outlast
POSTGRES_PORT=5432
