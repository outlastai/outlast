# OutLast Environment Configuration
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000
LOGS_LEVEL=info

# Database
DATABASE_URL="file:./mods/apiserver/dev.db"

# AI Agent (OpenAI)
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
API_BASE_URL=http://localhost:3000

# Email Channel (Resend)
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=orders@updates.fonoster.com
EMAIL_FROM_NAME=OutLast
EMAIL_REPLY_TO=orders-replies@updates.fonoster.com

# SMS Channel (Future)
# SMS_PROVIDER_API_KEY=your-sms-provider-key

# Voice Channel (Fonoster)
FONOSTER_WORKSPACE_ACCESS_KEY_ID=your-workspace-access-key-id
FONOSTER_ACCESS_KEY_ID=your-access-key-id
FONOSTER_ACCESS_KEY_SECRET=your-access-key-secret
FONOSTER_FROM_NUMBER=+1234567890

# Follow-up Configuration
MIN_DAYS_BETWEEN_FOLLOW_UPS=7
MAX_FOLLOW_UP_ATTEMPTS=5
ESCALATION_THRESHOLD=3

# Scheduler Configuration
SCHEDULER_CRON_ENABLED=true
SCHEDULER_CRON_SCHEDULE="0 * * * *"  # Every hour at minute 0 (cron format)
SCHEDULER_BATCH_SIZE=50

# Data Sources (Future)
# GOOGLE_SHEETS_CREDENTIALS=path-to-credentials.json

# Test/Development Configuration
TEST_SUPPLIER_EMAIL=test-supplier@example.com
TEST_SUPPLIER_SMS=+15551234567

